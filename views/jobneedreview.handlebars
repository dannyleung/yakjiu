<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/client">Dashboard</a>
    </li>
    <li class="breadcrumb-item active">Job review list</li>
</ol>

<div class="table-responsive">
<table class="table" id="dataTable">
  <thead class="thead-light">
    <tr>
      <th scope="col">#JobID</th>
      <th scope="col">Shopname</th>
      <th scope="col">Handled by</th>
      <th scope="col">Response date</th>
    </tr>
  </thead>
  <tbody>
      {{#each data}}
    <tr>
      <th scope="row"><a href="#" onclick="popupJob({{id}})">{{id}}</a></th>
      <td>{{shopname}}</td>
      <td>{{firstname}} {{lastname}}</td>
      <td>{{updated_at}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>

<script>
function popupJob(id) {
    var jobWindow = window.open(`/client/jobreview/${id}`, "jobdetailswindow", "width=500,height=800,status=0,menubar=0,directories=0,top=0,left=10");
}
</script>